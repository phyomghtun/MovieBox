<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MovieBox.Headline">
        <item name="fontFamily">@font/merriweather_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.MovieBox.SubTitle">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MovieBox.Body">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/platinum</item>
    </style>

    <style name="Theme.MovieBox.Body.DarkBlue">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#C5C3EC</item>
    </style>

    <style name="Theme.MovieBox.Body.Hours">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MovieBox.Genres">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">8sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#2F59BE</item>
    </style>

    <style name="Theme.MovieBox.PhotoGrid">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/margin_tiny_2</item>
        <item name="cornerSizeTopRight">@dimen/margin_tiny_2</item>
        <item name="cornerSizeBottomLeft">@dimen/margin_tiny_2</item>
        <item name="cornerSizeBottomRight">@dimen/margin_tiny_2</item>
    </style>

    <style name="Theme.MovieBox.DetailTitle">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.MovieBox.Seemore">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor"> #AAA9B1</item>
    </style>
</resources>